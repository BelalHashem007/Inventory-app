<ul class="books">
  <% for (let i=0; i< books.length; i++){%>
  <li class="book">
    <div class="bookTitle">
      <strong>Title</strong>:
      <a href="/book/<%=books[i].id%>" class="titlePage"
        ><%=books[i].title%>.</a
      >
    </div>
    <div class="bookRating"><strong>Rating</strong>: <%=books[i].rating%></div>
    <a href="/book/<%=books[i].id%>/update" class="edit_book"><button><svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24"><title>edit</title><path d="M20.71,7.04C21.1,6.65 21.1,6 20.71,5.63L18.37,3.29C18,2.9 17.35,2.9 16.96,3.29L15.12,5.12L18.87,8.87M3,17.25V21H6.75L17.81,9.93L14.06,6.18L3,17.25Z" /></svg></button></a>
    <form
      action="/book/<%=books[i].id%>/delete"
      method="post"
      onsubmit="return confirm('Are you sure you want to delete this book ?')"
    >
      <button class="delete_book" type="submit" style="color: red"><svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24"><title>delete</title><path d="M19,4H15.5L14.5,3H9.5L8.5,4H5V6H19M6,19A2,2 0 0,0 8,21H16A2,2 0 0,0 18,19V7H6V19Z"/></svg></button>
    </form>
  </li>
  <%}%>
</ul>
