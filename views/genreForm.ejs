<html>
    <head>
        <title><%= title%></title>
    </head>
    <body>
        <h1><%= title%></h1>
        <% 
        let path;
        if (type=="Update")
            path = "/genre/"+genre+"/update";
        else
            path = "/genre/create";
        %>
        <form action="<%= path%>" method="post">
            <label>Genre Name*: <input type="text" name="genre" value="<%= type=='Update' ? genre:''%>"></label>
            <button type="submit">Submit</button>
        </form>
    </body>
</html>